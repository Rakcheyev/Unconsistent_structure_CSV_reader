{
  "version": 1,
  "global": {
    "encoding": "utf-8",
    "error_policy": "fail-fast",
    "synonym_dictionary": "storage/synonyms.json",
    "canonical_schema_path": "storage/canonical_schemas.json"
  },
  "profiles": {
    "low_memory": {
      "description": "2-core CPU, <=2 GB RAM, spinning disk",
      "block_size": 1000,
      "min_gap_lines": 200,
      "max_parallel_files": 1,
      "sample_values_cap": 24,
      "writer_chunk_rows": 25000,
      "resource_limits": {
        "memory_mb": 1536,
        "spill_mb": 4096,
        "max_workers": 2,
        "temp_dir": "artifacts/tmp"
      }
    },
    "workstation": {
      "description": "8-core CPU, >=16 GB RAM, SSD",
      "block_size": 10000,
      "min_gap_lines": 100,
      "max_parallel_files": 4,
      "sample_values_cap": 64,
      "writer_chunk_rows": 100000,
      "resource_limits": {
        "memory_mb": 8192,
        "spill_mb": 16384,
        "max_workers": 4,
        "temp_dir": "artifacts/tmp"
      }
    }
  }
}
